<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acomminos.morlunk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="MorlunkApplication">
        <activity
            android:name=".MorlunkHomeActivity"
            android:label="@string/title_activity_morlunk" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MorlunkSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.acomminos.morlunk.MorlunkActivity" />
        </activity>

        <service
            android:name=".MorlunkNotificationService"
            android:enabled="true" >

            <!-- android:exported="true" -->
        </service>

        <activity
            android:name=".account.MorlunkAccountActivity"
            android:label="@string/title_activity_morlunk_account" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.acomminos.morlunk.MorlunkActivity" />
        </activity>
    </application>

</manifest>